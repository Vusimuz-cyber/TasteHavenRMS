<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tastehaven.rms">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RMS">
        <activity android:name=".activities.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.LoginActivity"/>
        <activity android:name=".activities.RegisterActivity"/>
        <activity android:name=".activities.HomeActivity"/>
        <activity android:name=".activities.MenuActivity"/>
        <activity android:name=".activities.ReservationActivity"/>
        <activity android:name=".activities.ReservationStatusActivity"/>
        <activity android:name=".activities.FeedbackActivity"/>
        <activity android:name=".activities.ThankYouActivity"/>
        <activity android:name=".activities.WaiterHomeActivity"/>
        <activity android:name=".activities.UpdateOrderStatusActivity"/>
        <activity android:name=".activities.ViewOrdersActivity"/>
        <activity android:name=".activities.ChefHomeActivity"/>
        <activity android:name=".activities.ManagerHomeActivity"/>
        <activity android:name=".activities.ManageMenuActivity"/>
        <activity android:name=".activities.ManageReservationsActivity"/>
        <activity android:name=".activities.ManageInventoryActivity"/>
        <activity android:name=".activities.ViewReportsActivity"/>
    </application>

</manifest>